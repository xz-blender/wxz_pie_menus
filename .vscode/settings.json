{
"emeraldwalk.runonsave": {
"commands": [
    // 1) 先按 isort 规则整理 import（Ruff 规则 I）
    { "match": "\\.py$", "cmd": ".venv\\Scripts\\python.exe -m ruff check --select I --fix \"${file}\"" },
    // 2) 再统一代码格式
    { "match": "\\.py$", "cmd": ".venv\\Scripts\\python.exe -m ruff format \"${file}\"" }
]},
"[python]": {
    "editor.formatOnSave": true, // new
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
},
}
    
  
 